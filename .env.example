# Proxy Server Configuration
PORT=3000

# AllData credentials
ALLDATA_EMAIL=your_email@example.com
ALLDATA_PASSWORD=your_password

# Auth Server URL
AUTH_SERVER_URL=http://localhost:3001

# JWT configuration (must match auth server)
JWT_SECRET=your_jwt_secret_key_change_this
JWT_ISSUER=alldata-auth-server

# Cache configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Logging
LOG_LEVEL=info

# For Docker Compose
AUTH_DB_PASSWORD=auth_secret_password